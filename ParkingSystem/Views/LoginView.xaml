<UserControl x:Class="ParkingSystem.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/login-background.jpg"
                    Opacity="0.5"
                    Stretch="UniformToFill" />
    </UserControl.Background>

    <Border Margin="25"
            Padding="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="{StaticResource BrushPrimary2}"
            BorderThickness="3"
            CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10"
                              Color="Gray" />
        </Border.Effect>

        <Grid Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       FontSize="48"
                       Text="Parking System" />

            <TextBlock Grid.Row="1"
                       Margin="0,10"
                       HorizontalAlignment="Center"
                       FontSize="18"
                       FontWeight="Thin"
                       Text="The world's simplest parking management system application." />

            <Grid Grid.Row="2"
                  Margin="0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"
                                          SharedSizeGroup="Label" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="15"
                               Text="Userid" />
                    <TextBox Grid.Column="1"
                             Margin="20,0,0,0"
                             Height="38"
                             VerticalAlignment="Top"
                             Text="{Binding Userid, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid Grid.Row="1"
                      Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"
                                          SharedSizeGroup="Label" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="15"
                               Text="Password" />
                    <TextBox Grid.Column="1"
                             Margin="20,0,0,0"
                             Height="38"
                             VerticalAlignment="Top"
                             Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Button Grid.Row="2"
                        Width="120"
                        Height="50"
                        FontSize="17"
                        Command="{Binding LoginCommand}">
                    <TextBlock Text="Login"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center" />
                </Button>

                <Button Grid.Row="3"
                        Margin="0,10"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Command="{Binding ViewRegisterCommand}"
                        Content="Don't have an account?"
                        FontSize="14"
                        Foreground="Blue"
                        IsDefault="True" />

            </Grid>
        </Grid>
    </Border>
</UserControl>
