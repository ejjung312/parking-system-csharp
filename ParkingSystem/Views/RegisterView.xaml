<UserControl x:Class="ParkingSystem.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkingSystem.Views"
             mc:Ignorable="d" >
    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/login-background.jpg"
                    Opacity="0.5"
                    Stretch="UniformToFill" />
    </UserControl.Background>

    <Border Margin="25"
            Padding="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="{StaticResource BrushPrimary2}"
            BorderThickness="3"
            CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10"
                              Color="Gray" />
        </Border.Effect>

        <Grid Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       FontSize="48"
                       Text="Parking System" />

            <TextBlock Grid.Row="1"
                       Margin="0,10"
                       HorizontalAlignment="Center"
                       FontSize="18"
                       FontWeight="Thin"
                       Text="The world's simplest parking management system application." />

            <Grid Grid.Row="2"
                  Margin="0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"
                                          SharedSizeGroup="Label" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="UserId" />
                    <TextBox Grid.Column="1"
                             Margin="20,0,0,0"
                             Height="30"
                             Text="{Binding Userid, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid Grid.Row="1"
                      Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"
                                          SharedSizeGroup="Label" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Username" />
                    <TextBox Grid.Column="1"
                             Margin="20,0,0,0"
                             Height="30"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid Grid.Row="2"
                      Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"
                                          SharedSizeGroup="Label" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Password" />
                    <TextBox Grid.Column="1"
                             Margin="20,0,0,0"
                             Height="30"
                             VerticalAlignment="Top"
                             Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid Grid.Row="3"
                      Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"
                                          SharedSizeGroup="Label" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Confirm Password" />
                    <TextBox Grid.Column="1"
                             Margin="20,0,0,0"
                             Height="30"
                             VerticalAlignment="Top"
                             Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Button Grid.Row="4"
                        Margin="0,10"
                        HorizontalAlignment="Center"
                        Command="{Binding RegisterCommand}"
                        Content="Register"
                        FontSize="14"
                        IsDefault="True" />

                <Button Grid.Row="5"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Command="{Binding ViewLoginCommand}"
                        Content="Already have an account?"
                        FontSize="14"
                        Foreground="Blue" />

            </Grid>
        </Grid>
    </Border>
</UserControl>
